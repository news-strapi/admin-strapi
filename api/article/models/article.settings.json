{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Art√≠culos",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "intro": {
      "type": "text",
      "required": false
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "publishedAt": {
      "type": "datetime",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "articles",
      "dominant": true
    },
    "cover": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "author": {
      "model": "writer",
      "via": "articles"
    },
    "openGraph": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    },
    "mainCategory": {
      "model": "category"
    },
    "tags": {
      "via": "articulos",
      "collection": "tag"
    },
    "widgets": {
      "type": "dynamiczone",
      "components": [
        "widget.link",
        "widget.ads",
        "widget.video",
        "widget.html"
      ]
    }
  }
}
